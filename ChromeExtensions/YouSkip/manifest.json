{
  "name": "YouSkip",
  "description": "Skip full video or 5 seconds to push skip",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["scripts/html.js", "scripts/lib.js", "scripts/main.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "assets/icon_16x16.png",
    "32": "assets/icon_32x32.png",
    "48": "assets/icon_48x48.png",
    "128": "assets/icon_128x128.png"
  }
}
